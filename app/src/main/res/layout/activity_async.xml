<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsyncActivity">


    <Button
        android:id="@+id/btn_start_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start load"/>

    <Button
        android:id="@+id/btn_cancel_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel load"
        android:layout_toRightOf="@+id/btn_start_load"/>

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start_load"/>

</RelativeLayout>